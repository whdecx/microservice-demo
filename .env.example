# Docker Environment Configuration Template
# Copy this file to .env and customize the values as needed
# Usage: docker run --env-file .env ...

# ============================================
# Application Configuration
# ============================================
APP_NAME=Microservice Chain

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# Service Communication Settings
# ============================================
# Toggle between RestClient (true) and direct method calls (false)
USE_REST_CLIENT=true

# Toggle between async (true) and sync (false) RestClient calls
USE_ASYNC=true

# Service URLs for inter-service communication
# For single container deployment (all services in one app)
SERVICE_B_URL=http://localhost:8080
SERVICE_C_URL=http://localhost:8080

# For separate service deployments, use actual service hostnames:
# SERVICE_B_URL=http://service-b:8081
# SERVICE_C_URL=http://service-c:8082

# ============================================
# RestClient Timeout Configuration
# ============================================
# Connection timeout in milliseconds (default: 5000ms = 5 seconds)
SERVICES_REST_CLIENT_CONNECT_TIMEOUT=5000

# Read timeout in milliseconds (default: 10000ms = 10 seconds)
SERVICES_REST_CLIENT_READ_TIMEOUT=10000

# ============================================
# Spring Boot Configuration
# ============================================
SPRING_PROFILES_ACTIVE=default

# ============================================
# JVM Memory Configuration
# ============================================
# Java options for container optimization
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# ============================================
# Logging Configuration
# ============================================
# Log levels: TRACE, DEBUG, INFO, WARN, ERROR, OFF
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_EXAMPLE_MICROSERVICE_DEMO=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO

# ============================================
# Message Templates (Optional)
# ============================================
# Uncomment to override default templates at runtime
# MESSAGE_SERVICE_A_TEMPLATE=Hello {user}!
# MESSAGE_SERVICE_B_TEMPLATE={previous_message} Welcome to our system.
# MESSAGE_SERVICE_C_TEMPLATE={previous_message} Your account is ready!
